@page "/AddTheater"
@using BroadwayShows.Library.Models;
@using BroadwayShows.Library.Services;
@inject TheaterService TheaterService
@inject NavigationManager NavigationManager

<h3>Add Theater</h3>

<p style="color:@(string.IsNullOrEmpty(statusMessage) || statusMessage == "New Theater added!" ? "blue" : "red")">@statusMessage</p>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label for="name">Theater Name:</label>
                <InputText id="name" class="form-control" @bind-Value="theater.Name" />
            </div>

            <div class="form-group">
                <label for="address">Address:</label>
                <InputText id="address" class="form-control" @bind-Value="theater.Address" />
            </div>
            <div class="row mb-3">
            <div class="form-group">
                <label for="numberOfSeats">Number of Seats:</label>
                <InputNumber id="numberOfSeats" class="form-control" @bind-Value="theater.NumberOfSeats" />
            </div>
            </div>
            <div class="row mb-3">
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary" @onclick="HandleValidSubmit">Add New Theater</button>
                <button class="btn btn-secondary mt-2" @onclick="NavigateToOverview">Cancel</button>
            </div>
            </div>
        </div>
    </div>
</div>

@code {
    private Theater theater = new Theater();
    private string statusMessage = "";

    protected override void OnInitialized()
    {
    }

    private void NavigateToOverview()
    {
        NavigationManager.NavigateTo("/AddAttributes");
    }

    private async Task HandleValidSubmit()
    {
        if (AreFieldsComplete())
        {
            await TheaterService.CreateTheaterAsync(theater);
            NavigationManager.NavigateTo("/AddTheater");
            statusMessage = "New Theater added!";
            ResetForm();
        }
        else
        {
            statusMessage = "Please complete all fields.";
        }
    }

    private bool AreFieldsComplete()
    {
        return
            !string.IsNullOrEmpty(theater.Name) &&
            !string.IsNullOrEmpty(theater.Address) &&
            theater.NumberOfSeats > 0;
    }

    private void ResetForm()
    {
        theater = new Theater();
    }
}
